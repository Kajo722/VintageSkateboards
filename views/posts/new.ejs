<h1>New Post</h1>
<form action="/posts" method="POST">
    <div>
        <input type="text" placeholder="title" name="post[title]">
    </div>
    <div>
        <input type="text" placeholder="price" name="post[price]">
    </div>
    <div>
        <textarea name="" placeholder="description" name="post[description]"></textarea>
    </div>
    <div>
        <input type="text" placeholder="location" name="post[location]">
    </div>
    <input type="submit">
</form>